{
  "manifest_version": 2,
  "name": "InboxAI",
  "description": "InboxAI helps you translate, polish, and write emails.",
  "version": "0.1.4",
  "author": "InboxAI Developer",
  "browser_specific_settings": {
    "gecko": {
      "id": "inbox-ai@angme.org",
      "strict_min_version": "115.0"
    }
  },
  "icons": {
    "32": "icons/inboxai.svg",
    "48": "icons/inboxai.svg",
    "64": "icons/inboxai.svg",
    "128": "icons/inboxai.svg"
  },
  "permissions": [
    "storage",
    "messagesRead",
    "accountsRead",
    "compose",
    "menus"
  ],
  "background": {
    "scripts": ["lib/ai_service.js", "background/background.js"]
  },
  "browser_action": {
    "default_icon": "icons/inboxai.svg",
    "default_title": "InboxAI",
    "default_popup": "popup/main_menu.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "compose_action": {
    "default_icon": "icons/inboxai.svg",
    "default_title": "InboxAI",
    "default_popup": "compose/compose_panel.html"
  }

}
